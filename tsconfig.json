{
  "compilerOptions": {
    "allowJs": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "lib": [
      "dom",
      "esnext"
    ],
    "module": "commonjs",
    "noEmit": true,
    "noUnusedLocals": false,
    "strict": true,
    "target": "esnext"
  },
  "include": [
    "src/types",
  ],
  "exclude": [
    "node_modules",
    "public",
    ".cache"
  ]
}
